{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@omniswap/core": [
        "../../packages/core/src"
      ],
      "@omniswap/core/*": [
        "../../packages/core/src/*"
      ],
      "@omniswap/types": [
        "../../packages/types/src"
      ],
      "@omniswap/types/*": [
        "../../packages/types/src/*"
      ],
      "@omniswap/shared": [
        "../../packages/shared/src"
      ],
      "@omniswap/shared/*": [
        "../../packages/shared/src/*"
      ]
    },
    "types": [
      "react-native",
      "expo"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/**/*",
    "app/**/*"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
  ]
}
