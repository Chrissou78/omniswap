{
  "name": "omniswap",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "pnpm --filter @omniswap/web dev",
    "dev:mobile": "pnpm --filter @omniswap/mobile dev",
    "build": "turbo run build",
    "build:shared": "turbo run build --filter @omniswap/shared",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "mobile": "pnpm --filter @omniswap/mobile start:lan",
    "mobile:android": "pnpm --filter @omniswap/mobile android",
    "mobile:ios": "pnpm --filter @omniswap/mobile ios"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "eslint": "^9.17.0",
    "prettier": "^3.2.0",
    "prisma": "5.22.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}